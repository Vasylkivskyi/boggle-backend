{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "es2016",    
    "lib": ["dom","es6"], 
    "module": "commonjs",   
    "rootDir": "src",  
    "removeComments": true,   
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,     
    "strict": true,   
    "skipLibCheck": true
  },
}
